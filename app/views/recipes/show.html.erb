<header class="head" role="banner">
        <a href="" class="logo">
        <%= image_tag("worldgrub.png") %>

        </a>

</header><!-- end header -->

<div id="main-container" class="container">

    <div class="col-md-4" >
    <table class="table table-striped">
    <tbody>
        <tr>

                <% @data.each do |item| %>
                <h1><%= link_to item["title"], new_recipe_path%></h1>
                <div ><img class="recipe_image" src=<%= @baseUri + item["image"] %> ></div>
                <% end %>

            </tr>
            </table>
    </div>


    <div class="col-md-8" >
    <table>
        <tr>
                <% @dataRecipeInfo.each do |info| %>
                <h3><%=info["originalString"]%></h3>
                <% end %>
        </tr>
        </tbody>
    </table>
    </div>






</div>

